<%- include('../header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card shadow-lg rounded-4 border-0" style="font-family: 'Poppins', sans-serif;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center pb-4 border-bottom">
                            <h2 class="card-title mb-0 text-dark fw-bold">View Extra Category</h2>
                            <a href="/exform" class="btn btn-lg" style="background-color: #6640b2; color: white;">
                                <i class="fa-solid fa-plus"></i> Add Extra Category
                            </a>
                        </div>
                        <div class="table-responsive pt-3">
                            <table class="table table-hover table-striped text-center align-middle shadow-sm rounded-3">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Category</th>
                                        <th>Subcategory</th>
                                        <th>Excategory</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% record.map((subcate, i) => { i = i + 1 %>
                                        <tr>
                                            <td><strong><%= i %></strong></td>
                                            <td><%= subcate.categoryId.category %></td>
                                            <td>
                                                <% if (subcate.subcategoryId) { %>
                                                    <%= subcate.subcategoryId.subcategory %>
                                                <% } else { %>
                                                    <span class="text-muted">No Subcategory</span>
                                                <% } %>
                                            </td>
                                            <td><%= subcate.excategory %></td>
                                            <td>
                                                <% if(subcate.categoryId.status === 1) { %>
                                                    <a href="/categoryInstock?id=<%= subcate.categoryId.id %>" class="btn btn-success btn-sm w-100">Instock</a>
                                                <% } else { %>
                                                    <a href="/categoryOutstock?id=<%= subcate.categoryId.id %>" class="btn btn-warning btn-sm w-100">Outstock</a>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/editexRecord?editId=<%= subcate.id %>" class="btn btn-primary btn-sm me-1">
                                                    <i class="fa-solid fa-edit"></i>
                                                </a>
                                                <a href="/deleteexrecord?delid=<%= subcate.id %>" class="btn btn-danger btn-sm">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>

<%- include('../footer') %>