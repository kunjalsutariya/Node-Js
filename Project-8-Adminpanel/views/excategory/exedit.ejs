<%- include('../header') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0" style="font-family: 'Arial', sans-serif;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center pb-3 border-bottom">
                            <h2 class="card-title text-primary" style="font-size: 28px; font-weight: bold;">Update Extra Category</h2>
                            <a href="/extable" class="btn btn-outline-primary">View Extra Category</a>
                        </div>
                        <form class="forms-sample mt-4" method="post" action="/updateExcategory">
                            <input type="hidden" value="<%= single.id %>" name="editid">
                            
                            <div class="form-group">
                                <label for="category" class="font-weight-bold">Category</label>
                                <select name="category" class="form-control rounded">
                                    <option>---Select Category---</option>
                                    <% category.map((cat)=>{ %>
                                        <option <% if(cat.category==single.categoryId.category){%> selected <%}%> value="<%= cat.id %>">
                                            <%= cat.category %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="subcategory" class="font-weight-bold">Subcategory</label>
                                <select name="subcategory" class="form-control rounded">
                                    <option>---Select Subcategory---</option>
                                    <% subcategory.map((sub)=>{ %>
                                        <option <% if(sub.subcategory==single.subcategoryId.subcategory) {%> selected <% } %> value="<%= sub.id %>">
                                            <%= sub.subcategory %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="excategory" class="font-weight-bold">Extra Category</label>
                                <input type="text" value="<%= single.excategory %>" name="excategory" class="form-control rounded" placeholder="Enter Extra Category">
                            </div>
                            
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary px-4 mr-2">Submit</button>
                                <button type="reset" class="btn btn-secondary px-4">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>