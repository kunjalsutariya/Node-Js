<%- include('../header') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card shadow-lg rounded-4" style="font-family: 'Poppins', sans-serif;">
                    <div class="card-body">
                        <div class="title-box d-flex justify-content-between align-items-center pb-4">
                            <h2 class="card-title mb-0 text-primary" style="font-size: 28px; font-weight: 600;">
                                View SubCategory
                            </h2>
                            <a href="/formsub" class="btn btn-outline-primary btn-lg px-4">
                                <i class="fa-solid fa-plus me-2"></i> Add SubCategory
                            </a>
                        </div>
                        <div class="table-responsive pt-3">
                            <table class="table table-hover table-striped text-center rounded-3 overflow-hidden">
                                <thead class="table-dark">
                                    <tr>
                                        <th style="width: 10%;">Srn</th>
                                        <th style="width: 30%;">Category</th>
                                        <th style="width: 30%;">Subcategory</th>
                                        <th style="width: 10%;">Status</th>
                                        <th style="width: 12%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% subcategory.map((subcate, i) => { i = i + 1 %>
                                        <tr>
                                            <td><%= i %></td>
                                            <td><%= subcate.categoryId.category %></td>
                                            <td><%= subcate.subcategory %></td>
                                            <td>
                                                <% if(subcate.categoryId.status === 1) { %>
                                                    <span class="badge bg-success px-3 py-2">Instock</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning px-3 py-2 text-dark">Outstock</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/editsubRecord?editId=<%= subcate.id %>"
                                                    class="btn btn-outline-primary btn-sm mx-1">
                                                    <i class="fa-solid fa-edit"></i>
                                                </a>
                                                <a href="/deletesubrecord?delid=<%= subcate.id %>"
                                                    class="btn btn-outline-danger btn-sm mx-1">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
