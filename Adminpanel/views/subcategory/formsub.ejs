<%- include('../header') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card shadow-lg rounded-4" style="font-family: 'Poppins', sans-serif;">
                    <div class="card-body">
                        <div class="title-box d-flex justify-content-between align-items-center pb-4">
                            <h2 class="card-title mb-0 text-primary" style="font-size: 28px; font-weight: 600;">Add SubCategory</h2>
                            <div class="btn p-0">
                                <a href="/tablesub" class="btn btn-outline-primary btn-lg px-4">View SubCategory</a>
                            </div>
                        </div>
                        <form class="forms-sample" method="post" action="/Addsubcategory">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Select Category</label>
                                <select name="category" class="form-control border-primary rounded-3 p-2">
                                    <option value="">--- Select Category ---</option>
                                    <% category.map((cat)=>{ %>
                                        <option value="<%= cat.id %>"><%= cat.category %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">SubCategory Name</label>
                                <input type="text" name="subcategory" class="form-control border-primary rounded-3 p-2"
                                    placeholder="Enter Subcategory">
                            </div>
                            <div class="d-flex justify-content-start gap-3">
                                <button type="submit" class="btn btn-primary btn-lg px-4">Submit</button>
                                <button type="reset" class="btn btn-secondary btn-lg px-4">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
</div>

<%- include('../footer') %>
