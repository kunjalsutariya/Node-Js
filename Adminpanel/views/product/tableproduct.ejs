<%- include('../header') %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card shadow-lg rounded" style="font-family: 'Poppins', sans-serif;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center pb-4 border-bottom">
                                <h2 class="card-title mb-0 text-primary" style="font-size: 28px;">View Product Category</h2>
                                <a href="/formproduct" class="btn btn-outline-primary">+ Add Product</a>
                            </div>
                            <div class="container">
                                <div class="row">
                                    <% record.map((product, i)=> { %>
                                    <div class="col-md-4 mb-4">
                                        <div class="card border-0 shadow-sm p-3" style="border-radius: 12px;">
                                            <img src="<%= product.image %>" class="card-img-top rounded" alt="Product Image" style="height: 200px; object-fit: cover;">
                                            <div class="card-body">
                                                <h5 class="card-title text-dark font-weight-bold"><%= product.title %></h5>
                                                <p class="text-muted mb-1">Category: <%= product.categoryId.category %></p>
                                                <p class="text-muted mb-1">Subcategory: <%= product.subcategoryId.subcategory %></p>
                                                <p class="text-muted mb-1">Extra: <%= product.excategoryId.excategory %></p>
                                                <p class="text-dark font-weight-bold">â‚¹ <%= product.price %></p>
                                                <p class="text-secondary">Quantity: <%= product.qty %></p>
                                                <p class="text-muted" style="font-size: 14px;"><%= product.description %></p>
                                                <div class="d-flex justify-content-between mt-3">
                                                    <% if(product.categoryId.status === 1) { %>
                                                    <a href="/categoryInstock?id=<%= product.categoryId.id %>" class="btn btn-sm btn-success">In Stock</a>
                                                    <% } else { %>
                                                    <a href="/categoryOutstock?id=<%= product.categoryId.id %>" class="btn btn-sm btn-warning">Out of Stock</a>
                                                    <% } %>
                                                    <a href="/editpeoductRecord?editId=<%= product.id %>" class="btn btn-sm btn-primary">Edit</a>
                                                    <a href="/deleteproductrecord?delid=<%= product.id %>" class="btn btn-sm btn-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../footer') %>
