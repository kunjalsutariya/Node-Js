        }

        .nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-weight: bold;
            transition: color 0.3s;
        }


        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background: #51aa1b;
            color: white;
        }

        .header a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .card {
            overflow: hidden;
            border-radius: 10px;
            transition: box-shadow 0.3s ease-in-out;
            margin-bottom: 20px;
        }

        .card img {
            transition: transform 0.3s ease-in-out;
        }

        .card:hover img {
            transform: scale(1.05);
        }

        .btn-custom {
            font-weight: 600;
            color: black;
            text-decoration: none;
            border: 2px solid black;
            padding: 8px 16px;
            display: inline-block;
            transition: all 0.3s ease-in-out;
        }

        .btn-custom:hover {
            background-color: black;
            color: white;
        }

        .footer {
            background: #343a40;
            color: white;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>

