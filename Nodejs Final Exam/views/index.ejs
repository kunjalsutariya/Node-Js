<%- include('partials/header') %>

<style>
    body {
        background: url('/images/background.jpg') no-repeat center center/cover;
        color: white;
    }
    .glass-container {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
    .btn-custom {
        border-radius: 30px;
        font-size: 18px;
        padding: 12px 25px;
        transition: all 0.3s ease;
    }
    .btn-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.3);
    }
    .btn-gradient {
        background: linear-gradient(135deg, #ff7eb3, #ff758c);
        border: none;
        color: white;
    }
    .btn-gradient:hover {
        background: linear-gradient(135deg, #ff758c, #ff7eb3);
    }
</style>

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="glass-container">
        <h1 class="mb-4">Welcome to Our Store</h1>
        <hr class="my-4 border-white">

        <% if (!user) { %>
            <div class="d-flex gap-3 justify-content-center">
                <a class="btn btn-custom btn-gradient" href="/login" role="button">
                    <i class="fas fa-sign-in-alt"></i> Login
                </a>
                <a class="btn btn-custom btn-gradient" href="/register" role="button">
                    <i class="fas fa-user-plus"></i> Register
                </a>
            </div>
        <% } else { %>
            <p class="lead">Browse our latest products and add them to your cart.</p>
            <a class="btn btn-custom btn-gradient" href="/products" role="button">
                <i class="fas fa-shopping-bag"></i> View Products
            </a>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
    