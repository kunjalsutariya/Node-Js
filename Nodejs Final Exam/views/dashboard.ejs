    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5ebe0;
            color: #000;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background-color: #6d4c41;
            color: white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .nav a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-weight: bold;
            transition: color 0.3s;
        }

        .nav a:hover {
            color: #ffb74d;
        }

        .button {
            background-color: #8d6e63;
            color: white;
            padding: 10px 18px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
            transition: background 0.3s, transform 0.2s;
        }

        .button:hover {
            background-color: #5d4037;
            transform: scale(1.05);
        }

        /* Blog Cards */
        .card {
            background-color: #fff;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .card-img-top {
            height: 180px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .card-title {
            color: #5d4037;
            font-weight: bold;
        }

        .card-text {
            color: #6d4c41;
        }

        .btn-primary {
            background-color: #8d6e63;
            border: none;
            width: 100%;
            font-weight: bold;
            border-radius: 25px;
            transition: background 0.3s, transform 0.2s;
        }

        .btn-primary:hover {
            background-color: #5d4037;
            transform: scale(1.05);
        }

        /* Layout adjustments */

        /* footer */
        .footer {
            background-color: #6d4c41;
            color: white;
            margin: 0;
        }

        .footer-link {
            color: #d7a86e;
            /* Warm Golden Brown */
            text-decoration: none;
            font-weight: bold;
            margin: 10px 20px;
            transition: color 0.3s ease-in-out;
        }

        .footer-link:hover {    
            color: #ffcc80;
            /* Light Caramel Shade */
        }

        p {
            margin: 0;
            padding: 2px 0 15px 0;
        }
        
    </style>
</head>

