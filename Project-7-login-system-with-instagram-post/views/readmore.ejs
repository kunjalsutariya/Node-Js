<%- include('Header') %>

<section class="py-5 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-12">
                <div class="card custom-card shadow-lg">
                    <div class="card-body text-center">
                        <!-- Image Section -->
                        <% if (single && single.image) { %>
                            <img src="<%= single.image %>" alt="Blog Image" class="blog-image">
                        <% } else { %>
                            <p class="text-muted">üö´ No image available</p>
                        <% } %>

                        <!-- Content -->
                        <h2 class="blog-title">üìù <%= single.title ? single.title : "No Title Available" %></h2>
                        <p class="blog-desc"><strong>üìñ Description:</strong> <%= single.description ? single.description : "No Description Available" %></p>
                        <h5 class="blog-author">üë§ <strong>Author:</strong> <%= single.author ? single.author : "Unknown Author" %></h5>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center mt-3">
                            <a href="/editBlog?editId=<%= single._id %>" class="btn custom-btn shadow">‚úèÔ∏è Edit</a>
                            <a href="/deleteBlog?deletId=<%= single._id %>" class="btn custom-btn-delete shadow">üóëÔ∏è Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('Footer') %>

<style>
/* General Styles */
body {
    font-family: 'Poppins', sans-serif;
    background-color: #0f2027;
    color: #ffffff;
}

/* Custom Card */
.custom-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border-radius: 15px;
    padding: 25px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out;
}

.custom-card:hover {
    transform: translateY(-10px);
}

/* Blog Image */
.blog-image {
    width: 100%;
    max-height: 300px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
}

/* Blog Title */
.blog-title {
    font-size: 1.8rem;
    font-weight: bold;
    margin-top: 20px;
    color: #ffffff;
}

/* Blog Description */
.blog-desc {
    font-size: 1.2rem;
    color: #ffffff;
}

/* Blog Author */
.blog-author {
    font-size: 1rem;
    font-weight: bold;
    color: #ddd;
}

/* Buttons */
.custom-btn, .custom-btn-delete {
    padding: 12px 35px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 12px;
    transition: all 0.3s;
    margin: 0 10px;
}

.custom-btn {
    background: linear-gradient(135deg, #38ef7d, #11998e);
    color: white;
}

.custom-btn-delete {
    background: linear-gradient(135deg, #ff416c, #ff4b2b);
    color: white;
}

.custom-btn:hover, .custom-btn-delete:hover {
    transform: scale(1.05);
    opacity: 0.9;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .blog-title {
        font-size: 1.5rem;
    }

    .blog-desc {
        font-size: 1rem;
    }

    .custom-btn, .custom-btn-delete {
        padding: 10px 25px;
        font-size: 0.9rem;
    }
}
</style>
