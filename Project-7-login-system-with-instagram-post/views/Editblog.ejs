<%- include('Header') %>

<div class="page-wrapper" style="background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); padding: 3rem; min-height: 100vh; display: flex; align-items: center; justify-content: center; margin: 0;">
    <div class="container" style="max-width: 600px; background: rgba(255, 255, 255, 0.1); padding: 2rem; border-radius: 20px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); text-align: center; backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.3);">
        <h1 class="text-white fw-bold" style="font-size: 2rem; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);">✏️ Modify Your Blog</h1>

        <form action="/updateBlog" method="post" enctype="multipart/form-data" style="margin-top: 1.5rem;">
            <div class="mb-3 text-start">
                <label class="form-label text-white fw-bold">📌 Title:</label>
                <input type="text" class="form-control" name="title" value="<%= single.title %>" required style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px;">
            </div>

            <div class="mb-3 text-start">
                <label class="form-label text-white fw-bold">📝 Description:</label>
                <textarea class="form-control" name="description" required style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px; min-height: 100px;"><%= single.description %></textarea>
            </div>

            <div class="mb-3 text-start">
                <label class="form-label text-white fw-bold">👤 Author:</label>
                <input type="text" class="form-control" name="author" value="<%= single.author %>" required style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px;">
            </div>

            <div class="mb-3 text-start">
                <label class="form-label text-white fw-bold">📷 Image:</label>
                <input type="file" class="form-control" name="image" style="border-radius: 12px; background: rgba(255, 255, 255, 0.2); color: white; border: none; padding: 10px;">
            </div>

            <input type="hidden" name="editid" value="<%= single._id %>">
            <button type="submit" class="btn w-100" style="border-radius: 12px; font-weight: bold; background: linear-gradient(135deg, #ff9966, #ff5e62); color: white; padding: 12px; box-shadow: 0 4px 10px rgba(255, 94, 98, 0.3);">🚀 Update Blog</button>
        </form>
    </div>
</div>

<%- include('Footer') %>
