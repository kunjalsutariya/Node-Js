<%- include('Header') %>

<section id="blog" style="padding: 3rem; background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); min-height: 100vh; margin-top: 0; display: flex; flex-direction: column; align-items: center; backdrop-filter: blur(10px);">
    <div class="header-section text-center text-white" style="margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: bold; text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.3);">üìù Welcome to BlogCanvas</h1>
        <p style="font-size: 1.2rem; opacity: 0.8;">Discover amazing articles from various authors</p>
    </div>
    
    <% if (blogs.length === 0) { %>
        <h2 class="text-white fw-bold" style="margin-top: 3%; font-size: 2rem; text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.3); text-align: center;">
            üìå No Blog Added on Dashboard
        </h2>
    <% } else { %>
        <h2 class="text-white fw-bold" style="margin-bottom: 2rem; font-size: 2rem; text-shadow: 3px 3px 12px rgba(0, 0, 0, 0.3); text-align: center;">
            üìö Blog Repository
        </h2>

        <div class="container mt-4">
            <div class="row justify-content-center">
                <% blogs.map((blog) => { %>
                    <div class="col-md-4 d-flex">
                        <div class="blog-card shadow-lg border-0 d-flex flex-column h-100" style="border-radius: 20px; overflow: hidden; backdrop-filter: blur(15px); background: rgba(255, 255, 255, 0.1); box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3); transition: transform 0.3s ease-in-out; border: 1px solid rgba(255, 255, 255, 0.3);">
                            <div class="image" style="height: 220px; overflow: hidden; border-radius: 20px 20px 0 0;">
                                <img src="<%= blog?.image %>" alt="Blog image" style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s;">
                            </div>
                            <div class="content p-4 d-flex flex-column flex-grow-1">
                                <h3 class="title text-white fw-bold" style="font-size: 1.5rem; text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);">
                                    <%= blog?.title %>
                                </h3>
                                <p class="author text-light" style="font-style: italic; font-size: 0.9rem;">üë§ <%= blog?.author %></p>
                                <p class="description text-white flex-grow-1">
                                    <%= blog?.description.slice(0, 100) %>...
                                </p>
                                <a href="/readmore?readmoreId=<%= blog?.id %>" class="read-more btn w-100" style="border-radius: 12px; font-weight: bold; background: linear-gradient(135deg, #ff9966, #ff5e62); color: white; padding: 12px; box-shadow: 0 4px 10px rgba(255, 94, 98, 0.3); text-align: center; text-decoration: none; transition: background 0.3s ease-in-out;">
                                    üìñ Read More
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</section>

<%- include('Footer') %>
