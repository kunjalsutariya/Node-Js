<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    
    <style>
        /* General body styling */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f7fc;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
}

/* Main container styling */
.container {
    background-color: #fff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    width: 90%;
    max-width: 900px;
    text-align: center;
}

/* Header styling */
h1 {
    font-size: 2.5em;
    margin-bottom: 20px;
    color: #333;
}

/* Table styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

thead {
    background-color: #007bff;
    color: white;
}

thead th {
    padding: 12px;
    text-align: center;
    font-weight: bold;
}

tbody td {
    padding: 12px;
    text-align: center;
    border: 1px solid #ddd;
}

tbody tr:nth-child(odd) {
    background-color: #f9f9f9;
}

tbody tr:nth-child(even) {
    background-color: #f1f1f1;
}

/* Action button styling */
button {
    background-color: #28a745;
    border: none;
    padding: 8px 16px;
    color: white;
    font-size: 1em;
    margin: 5px;
    border-radius: 5px;
    cursor: pointer;
}

button a {
    color: white;
    text-decoration: none;
    display: block;
}

button:hover {
    background-color: #218838;
}

/* Delete button styling */
button.delete-btn {
    background-color: #dc3545;
}

button.delete-btn:hover {
    background-color: #c82333;
}

/* Add Task link */
.add-link {
    display: inline-block;
    margin-top: 20px;
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    font-size: 1.2em;
    border-radius: 5px;
}

.add-link:hover {
    background-color: #0056b3;
}

    </style>
</head>
<body>
    <div class="container">
        <h1>View Tasks</h1>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Task</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% record.map((val, i) => { %>
                <tr>
                    <td><%= ++i %></td>
                    <td><%= val.name %></td>
                    <td><%= val.phone %></td>
                    <td><%= val.status %></td>
                    <td>
                        <button class="delete-btn"><a href="/deletuser?deletId=<%= val.id %>">Delete</a></button>
                        <button><a href="/edituser?editId=<%= val.id %>">Edit</a></button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <a class="add-link" href="/form">Add Task</a>
    </div>
</body>
</html>
