<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>
    <style>
        /* General body styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Main container styling */
        .main-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 800px;
            text-align: center;
        }

        /* Header styling */
        .main-container h2 {
            margin-bottom: 20px;
            font-size: 2em;
            color: #343a40;
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        thead {
            background-color: #007bff;
            color: #fff;
        }

        thead td {
            padding: 10px;
            font-weight: bold;
            text-align: center;
        }

        tbody td {
            padding: 10px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }

        tbody tr:nth-child(even) {
            background-color: #e9ecef;
        }

        /* Action button styling */
        .action-btn {
            padding: 8px 12px;
            margin: 5px;
            border: none;
            border-radius: 4px;
            color: #fff;
            cursor: pointer;
            font-size: 0.9em;
        }

        .delete-btn {
            background-color: #dc3545;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }

        .edit-btn {
            background-color: #007bff;
        }

        .edit-btn:hover {
            background-color: #0056b3;
        }

       
    </style>
</head>

<body>
    <div class="main-container">
        <h2>View Users</h2>
        <table>
            <thead>
                <tr>
                    <td>Srno</td>
                    <td>Name</td>
                    <td>Phone</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                <% record.map((val, i) => { %>
                    <tr>
                        <td><%= val.id %></td>
                        <td><%= val.name %></td>
                        <td><%= val.phone %></td>
                        <td>
                            <a href="/deleteuser?deleteId=<%= val.id %>">
                                <button class="action-btn delete-btn">Delete</button>
                            </a>
                            <a href="/edituser?id=<%= val.id %>">
                                <button class="action-btn edit-btn">Edit</button>
                            </a>
                            
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/add" class="add-user">Add User</a>
    </div>
</body>

</html>
